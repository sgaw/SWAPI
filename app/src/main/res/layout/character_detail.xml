<LinearLayout android:id="@+id/character_detail"
              style="?android:attr/textAppearanceLarge"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
              android:textIsSelectable="true"
              android:orientation="vertical"
              tools:context="sgaw.playground.com.swapiapp.CharacterDetailFragment">
    <TextView
        android:id="@+id/text_view_stats_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_basic_stats"
        tools:text="Basic stats"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_height"
                tools:text="Height"/>
            <TextView
                android:id="@+id/text_view_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="someheight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_weight"
                tools:text="Weight"/>
            <TextView
                android:id="@+id/text_view_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="someweight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_birth_year"
                tools:text="Birth Year"/>
            <TextView
                android:id="@+id/text_view_birth_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="someyear"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text_view_recognize_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_recognizable_features"
        android:layout_below="@id/text_view_recognize_label"
        tools:text="How to recognize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_eye"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:text="@string/msg_eye_color"
            android:drawableBottom="@drawable/invisible"
            tools:text="Eye"/>
        <TextView
            android:id="@+id/text_view_hair"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:text="@string/msg_hair_color"
            android:drawableBottom="@drawable/long_beard"
            tools:text="Hair"/>
    </LinearLayout>
</LinearLayout>